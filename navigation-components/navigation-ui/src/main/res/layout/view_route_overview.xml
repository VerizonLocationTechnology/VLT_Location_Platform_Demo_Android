<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="200dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <com.verizon.location.navigation.ui.view.RouteStopsView
        android:id="@+id/route_stops"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        style="@style/TransportModeButtonGroup">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/drive_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon="@drawable/ic_car_side"
            style="@style/TransportModeButton" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/walk_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon="@drawable/ic_walk"
            style="@style/TransportModeButton" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/truck_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon="@drawable/ic_truck"
            style="@style/TransportModeButton" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

</merge>