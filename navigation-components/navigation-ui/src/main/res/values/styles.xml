<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style
        name="TransportModeButtonGroup"
        parent="Widget.MaterialComponents.MaterialButtonToggleGroup">
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
        <item name="checkedButton">@id/drive_button</item>
    </style>

    <style
        name="TransportModeButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_transport_mode</item>
        <item name="iconPadding">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="tint">@color/button_transport_mode</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style
        name="NavControlButton"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>